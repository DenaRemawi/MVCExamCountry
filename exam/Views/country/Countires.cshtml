@using exam.Data;
@model Country;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
        <meta name="viewport" content="width=device-width" />
        <title>Countires</title>
        <link href="~/css/site.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>
<body>
    <form method="post">

        <div class="row">
            <div class="col-lg-1 col-xs-1">
                <span>Code</span>
                <div class="col-xs-2">
                    <input type="text" class="form-control" name="txtcode" asp-for="Code" />
                </div>
            </div>
            <div class="col-lg-1 col-xs-1">
                <span>Name</span>
                <div class="col-xs-2">
                    <input type="text" class="form-control" name="txtname" asp-for="Country_Name" />
                </div>
            </div>
        </div>
        <div class="col-lg-1 offset-10">
            <input type="submit" value="Save" class=" btn  btn-primary" asp-action="Savecountry" />

        </div>
        <div class="row">
        <div class="col-lg-1 col-xs-1">
            <span>Name</span>
            <div class="col-xs-2">
                <input type="text" class="form-control" name="txtserch" />
            </div>
        </div>
            <div class="col-lg-12 col-xs-12">
            <div class="table table-bordered">
           <table>
               <thead>
                   <tr>
                       <td>
                           Code
                       </td>
                       <td>Name</td>
                       <td>Action</td>
                   </tr>
                   
               </thead>
               <tbody>
                   @foreach(Country item in Model)
            {
                       <tr>
                           <td> @item.Code</td>
                       
                       <td>
                           @item.Country_Name
                       </td>
                       <td>
                    

                    
                       </td>
                           </tr>
            }
               </tbody>
           </table>
            </div>
        </div></div>
    </form>


</body>

</html>
